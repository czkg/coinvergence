generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Information
model User {
  id              String    @id @default(uuid())
  firstName       String    @map("first_name")
  lastName        String    @map("last_name")
  email           String    @unique
  passHash        String    @map("pass_hash")

  isVerified      Boolean   @default(false) @map("is_verified")
  createdAt       DateTime  @default(now()) @map("create_at")

  tokens          EmailVerificationToken[]
}

// Token
model EmailVerificationToken {
  id        String      @id @default(uuid())
  token     String      @unique
  expiresAt DateTime    @map("expires_at")
  createdAt DateTime    @default(now()) @map("create_at")

  userId    String      @map("user_id")
  user      User        @relation(fields: [userId], references: [id])
}

// Crypto
model CryptoAsset {
  id         String   @id @default(uuid())
  symbol     String   @unique
  name       String
  coinId     String?  @unique
  logoUrl    String?
  createdAt  DateTime @default(now())

  prices     CryptoPrice[]
  ohlc       CryptoOHLC[]
}

// Crypto Price
model CryptoPrice {
  id        String   @id @default(uuid())
  assetId   String
  price     Decimal
  marketCap Decimal?
  volume24h Decimal?
  change24h Decimal?
  updatedAt DateTime @updatedAt

  asset     CryptoAsset @relation(fields: [assetId], references: [id])

  @@unique([assetId])
}

// Crypto History Price
model CryptoOHLC {
  id        String   @id @default(uuid())
  assetId   String
  interval  String
  open      Decimal
  high      Decimal
  low       Decimal
  close     Decimal
  volume    Decimal
  timestamp DateTime

  asset     CryptoAsset @relation(fields: [assetId], references: [id])

  @@unique([assetId, interval, timestamp])
}
