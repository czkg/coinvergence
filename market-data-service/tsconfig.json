{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": [
    "src",
    "../shared"
  ]
}
